{
    "name": "bible-import",
    "version": "1.0.0",
    "description": "Pipeline to import public domain Bibles into Firestore",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "download": "ts-node download_all.ts",
        "parse:kjv": "ts-node parsers/parse_kjv.ts",
        "parse:web": "ts-node parsers/parse_web.ts",
        "parse:asv": "ts-node parsers/parse_asv.ts",
        "parse:douay": "ts-node parsers/parse_douay.ts",
        "upload:kjv": "ts-node upload/upload_kjv.ts",
        "upload:web": "ts-node upload/upload_web.ts",
        "upload:asv": "ts-node upload/upload_asv.ts",
        "upload:douay": "ts-node upload/upload_douay.ts"
    },
    "dependencies": {
        "axios": "^1.6.0",
        "dotenv": "^16.3.0",
        "firebase-admin": "^11.11.0",
        "fs-extra": "^11.1.0",
        "adm-zip": "^0.5.10"
    },
    "devDependencies": {
        "@types/adm-zip": "^0.5.0",
        "@types/fs-extra": "^11.0.0",
        "@types/node": "^20.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.0"
    }
}